#!/sbin/openrc-run

supervisor=supervise-daemon
command=/usr/bin/dockerd --containerd /run/containerd/containerd.sock --default-runtime="oci" --add-runtime "oci=/usr/bin/runc"
command_background="yes"
pidfile="/run/$RC_SVCNAME/$RC_SVCNAME.pid"
name=$RC_SVCNAME
description="Dockerd"

start_pre()
{
    # Ensure Service DIR exits
    mkdir -p /run/$RC_SVCNAME/
}
